<div class="container" style="{background-color: #e8f0f7;}">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
    </div>
  </div>
</div>
<div class="MarginCards">
  <div class="row">
    <div class="col-sm-8 LittelMarginCards">
      <div class="card">
        <div class="card-body">
            <div id="carouselExampleIndicators-<%= @annonce.id %>" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <% @annonce.images.each_with_index do |image, index| %>
                  <li data-target="#carouselExampleIndicators-<%= @annonce.id %>" data-slide-to="<%= index %>" <%= "class='active'" if index.zero? %>></li>
                <% end %>
              </ol>
              <div class="carousel-inner">
                <% if @annonce.images.empty? %>
                  <div class="carousel-item active">
                    <%= image_tag "default_image.jpg", width: "100%", height: "auto" %>
                  </div>
                <% else %>
                  <% @annonce.images.each_with_index do |image, index| %>
                    <div class="carousel-item <%= "active" if index.zero? %>">
                      <%= image_tag image, width: "100%", height: "auto" %>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators-<%= @annonce.id %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators-<%= @annonce.id %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
    <div class="card-body">
      <h3 class="card-title"><%= @annonce.titre %></h3>
      <h5 class="card-title"><%= @annonce.etat %></h5>
      <h5 class="card-title"><%= @annonce.ville %></h5>
      <h5 class="card-title">
        <% if session[:utilisateur_id].present? %>
          <%= link_to "Ajouter aux favoris", favoris_path(annonce_id: @annonce.id), method: :post %>
        <% else %>
          <%= link_to "Ajouter aux favoris", login_path, method: :get %>
        <% end %>
      </h5>
      <p class="card-text"><small class="text-muted">Annonce cr√©e le <%= @annonce.created_at %></small></p>
    </div>
  </div>
</div>
    <div class="col-sm-3 LittelMarginCards">
      <div class="card padphone">
        <div class="card-body">
          <h3 class="text-center"><%= number_to_currency(@annonce.prix, unit: "") %> DH</h3>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            Description :
          </div>
          <p class="card-title"><%= @annonce.description %></p>
        </div>
    </div>
      <div class="card padphone">
        <div class="card-title">
          Contactez :
        </div>
        <div class="card-body d-flex align-items-center tel">
          <p class="card-title text-center"><%= @annonce.telephone %></p>
        </div>
      </div>
  </div>
  </div>
</div>
